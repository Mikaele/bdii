<h1>A(o) cliente <b><%= @cliente.pessoa.nome %></b> realizou os servocos abaixo:</h1>
  <%@valor =0%>
<table class="table">
  <tr>
    <th>Data</th>
    <th>Hora</th>
    <th>Satatus</th>
    <th>Obs</th>
    <th>Servico</th>
    <th>Preco</th>
  </tr>

<% @servicos.each do |realiza| %>
  <tr>
    <td><%= realiza.data %></td>
    <td><%= realiza.hora %></td>
    <td><%= realiza.satatus==true ? "Realizado" : "Não realizado" %></td>
    <td><%= realiza.obs %></td>
    <td><%= realiza.servico.nome %></td>
    <td><%= realiza.servico.preco %></td>
    <%@valor=@valor+realiza.servico.preco %>
  </tr>
<% end %>
</table>
<hr>
<p><b>Total consumo: <%=@valor%></b></p>
   <hr>
<h1>Serviços cancelados</h1>
<table class="table">
  <tr>
    <th>Data</th>
    <th>Hora</th>
    <th>Satatus</th>
    <th>Obs</th>
    <th>Servico</th>
    <th>Preco</th>
  </tr>

  <% @cancelados.each do |realiza| %>
      <tr>
        <td><%= realiza.data %></td>
        <td><%= realiza.hora %></td>
        <td><%= realiza.satatus==true ? "Realizado" : "Não realizado" %></td>
        <td><%= realiza.obs %></td>
        <td><%= realiza.servico.nome %></td>
        <td><%= realiza.servico.preco %></td>
      </tr>
  <% end %>
</table>