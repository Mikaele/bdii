<h1 class="text-center">Lista dos Serviços</h1>

<%=link_to 'Novo Serviço', new_servico_path, class:"btn"%>

<table class="table table-strippeds">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Categoria</th>
    <th>Preço</th>
    <th>Descricao</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

<% @servicos.each do |servico| %>
  <tr>
    <td><%= servico.nome %></td>
    <td><%= servico.categoria_id %></td>
    <td><%= servico.preco %></td>
    <td><%= servico.descricao %></td>
    <td><%=link_to 'Mostrar', servico, class: "btn btn-info" %></td>
    <td><%= link_to 'Editar', edit_servico_path(servico), class: "btn btn-warning" %></td>
    <td><%= link_to 'Deletar', servico, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />