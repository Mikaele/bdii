<h1 class="text-center">Lista dos Serviços</h1>

<%= link_to 'Novo Serviço', new_servico_path, class:"btn" %>

<p></p>
<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Categoria</th>
    <th>Nome</th>
    <th>Preço</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @servicos.each do |servico| %>
  <tr>
    <td><%= servico.category.nome %></td>
    <td><%= servico.nome %></td>
    <td><%= servico.preco %></td>
    <td><%= servico.descricao %></td>
    <td><%= link_to 'Visualizar', servico, class:"btn btn-info" %></td>
    <td><%= link_to 'Editar', edit_servico_path(servico), class:"btn btn-warning" %></td>
    <td><%= link_to 'Apagar', servico, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />
